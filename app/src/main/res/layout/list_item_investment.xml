<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/investmentParent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/nameLinLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "/>
            <TextView
                android:id="@+id/investmentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investment Name"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/initdatelinLayout"
            android:layout_below="@id/nameLinLayout"
            android:layout_marginTop="9dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial Date: "/>
            <TextView
                android:id="@+id/initdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial Date"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/ROIlinLay"
            android:layout_below="@id/initdatelinLayout"
            android:layout_marginTop="9dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly ROI: "/>
            <TextView
                android:id="@+id/monthlyROI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly ROI"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/investedamountlinlay"
            android:layout_below="@id/ROIlinLay"
            android:layout_marginTop="9dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invested Amount: "/>
            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invested Amount"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/profitlinlay"
            android:layout_below="@id/investedamountlinlay"
            android:layout_marginTop="9dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total expected profit: "/>
            <TextView
                android:id="@+id/profitamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="profit amount"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/finishdatelinlay"
            android:layout_below="@id/profitlinlay"
            android:layout_marginTop="9dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish Date: "/>
            <TextView
                android:id="@+id/finishdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finish date"/>



        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>